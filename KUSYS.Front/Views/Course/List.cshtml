@model List<CoursesResponse>
@{
    Layout = "_Layout";
}
@{
    if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">CourseCode</th>
                    <th scope="col">Name</th>
                    <th scope="col">

                        <a asp-action="Index" asp-controller="Course" class=" btn btn-primary btn-sm ">Add </a>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center"> Kurs Listesi Boş </div>
    }


}


