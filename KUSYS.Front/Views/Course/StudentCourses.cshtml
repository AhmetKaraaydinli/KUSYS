@model List<CoursesResponse>
@{
    Layout = "_Layout";
}
@{
    if (Model.Count > 0)
    {
        <div class="text-end">
            <a asp-action="AddStudent" asp-controller="Course">Add </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">CourseCode</th>
                    <th scope="col">CourseName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                        <td>

                            <a asp-action="DeleteStudent" asp-controller="Course" asp-route-studentId="@course.CourseId" class=" btn btn-danger btn-sm ">Delete </a>


                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center"> Kurs Listesi Boş </div>
    }


}


