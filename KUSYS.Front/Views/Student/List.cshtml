@model List<StudentReponse>
@{
    Layout = "_Layout";
}
@{
    if (Model.Count > 0)
    {



        <table class="table">
            <thead>
                <tr>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">BirtDate</th>
                    <th scope="col">
                        @{
                            if (User.IsInRole("admin"))
                            {
                                <a asp-action="New" asp-controller="Student" class=" btn btn-primary btn-sm ">Add </a>
                            }
                        }
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.BirthDate</td>
                        <td>
                            @{
                                if (User.IsInRole("admin"))
                                {
                                    <a asp-action="Update" asp-controller="Student" asp-route-studentId="@student.StudentId" class=" btn btn-warning btn-sm ">Update </a>
                                    <a asp-action="Delete" asp-controller="Student" asp-route-studentId="@student.StudentId" class=" btn btn-danger btn-sm ">Delete </a>
                                }
                            }

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center"> Kurs Listesi Boş </div>
    }


}


